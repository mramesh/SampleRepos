<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.mocansa"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/main_bg">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical">

		<TextView android:id="@+id/titleBarTextView"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textSize="20dip" android:textColor="@color/titlebarTextColor"
			android:text="Rate this App" android:background="@drawable/title_bar" />


		<LinearLayout android:layout_width="fill_parent"
			android:layout_marginLeft="10dip" android:layout_marginTop="10dip"
			android:layout_marginBottom="10dip" android:layout_marginRight="10dip"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:background="@drawable/feedback_bg">

			<TextView android:id="@+id/ratingTextView"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#ffffff" android:text="Your Ratings " android:layout_marginTop="20dip"
				android:textSize="20dip" android:layout_marginLeft="10dip" />

			<LinearLayout android:layout_marginTop="20dip"
				android:layout_width="fill_parent" android:layout_height="wrap_content">

				<Button android:id="@+id/starImg1" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_marginLeft="25dip"
					android:background="@drawable/star_selected"></Button>

				<Button android:id="@+id/starImg2" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_marginLeft="5dip"
					android:background="@drawable/star_selected"></Button>

				<Button android:id="@+id/starImg3" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_marginLeft="5dip"
					android:background="@drawable/star_selected"></Button>


				<Button android:id="@+id/starImg4" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_marginLeft="5dip"
					android:background="@drawable/star_selected"></Button>

				<Button android:id="@+id/starImg5" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_marginLeft="5dip"
					android:background="@drawable/star_selected"></Button>

			</LinearLayout>



			<!--
				<TextView android:id="@+id/commentsTextView"
				android:textColor="#ffffff" android:layout_marginTop="20dip"
				android:layout_marginLeft="10px" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Comments:" />
			-->
			
			
			<TextView android:id="@+id/commentsTextView"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#ffffff" android:text="Comments " android:layout_marginTop="20dip"
				android:textSize="20dip" android:layout_marginLeft="10dip" />

			<EditText android:id="@+id/content_text"
				android:layout_marginTop="2dip" android:layout_marginLeft="10px"
				android:layout_marginRight="10px" android:layout_height="200px"
				android:layout_width="fill_parent" android:layout_centerHorizontal="true"
				android:singleLine="false" android:gravity="top" android:inputType="textMultiLine" />


			<Button android:id="@+id/submit_button" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginTop="20dip" android:layout_marginBottom="10dip"
				android:layout_gravity="center" android:background="@drawable/submit_btn" />

		</LinearLayout>

	</LinearLayout>


	<!--
		<com.mocansa.Toolbar android:id="@+id/toolBar"
		android:layout_width="fill_parent" android:layout_height="60dip"
		android:layout_gravity="bottom" app:textViewId="option5" />
	-->
</FrameLayout>