<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@drawable/topsaver_deailbg">

	<ImageView android:id="@+id/userImage"
		android:layout_centerVertical="true" android:layout_width="40dip"
		android:layout_marginTop="5dip" android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip" android:layout_marginBottom="5dip"
		android:layout_height="40dip" android:background="@drawable/compitator_profilebg" />

	<TextView android:id="@+id/userNameTextView" android:layout_marginTop="20dip" 
		android:layout_width="wrap_content" android:textColor="#003366"
		android:textSize="15dip" android:layout_marginLeft="5dip" android:layout_toRightOf="@id/userImage"
		android:layout_height="wrap_content" android:text="Ramesh"/>

	<TextView android:id="@+id/descTextView" android:layout_width="wrap_content"
		android:textColor="#000000" android:textSize="13dip"
		android:layout_marginLeft="5dip" android:layout_toRightOf="@id/userImage" android:layout_below="@id/userNameTextView"
		android:layout_height="wrap_content" android:text="No of coupons saved"/>


	<LinearLayout android:layout_width="wrap_content"  android:layout_toRightOf="@id/descTextView"
			android:layout_below="@id/userNameTextView" android:layout_marginLeft="20dip"
		android:layout_height="wrap_content" android:background="@drawable/compitator_coupon_bg">

		<TextView android:id="@+id/couponCountTextView" android:gravity="center_horizontal"
			android:layout_width="wrap_content" android:textColor="#000000"
			android:textSize="13dip" android:layout_centerVertical="true"
			android:visibility="gone"
			android:layout_height="wrap_content" android:text="250 Coupons"/>

	</LinearLayout>




</RelativeLayout>

